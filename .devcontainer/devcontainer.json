// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/dotnet
{
	"name": "C# (.NET)",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/dotnet:1-9.0-bookworm",
	"features": {
		"ghcr.io/devcontainers/features/azure-cli:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/dotnet:2": {
			"version": "latest"
		},
		"ghcr.io/azure/azure-dev/azd:0": {
			"version": "stable"
		},
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"version": "latest"
		},
		"ghcr.io/nikiforovall/devcontainer-features/dotnet-aspire:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-dotnettools.csharp",
				"redhat.vscode-yaml",
				"ms-azuretools.vscode-docker",
				"GitHub.vscode-pull-request-github",
				"bierner.markdown-mermaid"
			]
		}
	},

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [5243, 5223, 5045,  7298, 18848, 19888],
  "portsAttributes": {
		"5243": {
			"label": "Identity HTTPS"
		},
		"5223": {
			"label": "Identity HTTP"
		},
		"5045": {
			"label": "Web App HTTP"
		},
		"7298": {
			"label": "Web App HTTPS"
		},
		"18848": {
			"label": "Dashboard HTTP"
		},
		"19888": {
			"label": "Dashboard HTTPS"
		}
	},

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "dotnet workload restore",	

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "root"
}
