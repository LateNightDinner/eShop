// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/dotnet
{
	"name": "C# (.NET)",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	// "image": "mcr.microsoft.com/devcontainers/dotnet:1.5.0-9.0-bookworm",
	"build": {
			// Path is relative to the devcontainer.json file.
			"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/devcontainers/features/azure-cli:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/dotnet:2": {
			"version": "latest"
		},
		"ghcr.io/azure/azure-dev/azd:0": {
			"version": "stable"
		},
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"version": "latest"
		},
		"ghcr.io/nikiforovall/devcontainer-features/dotnet-aspire:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-dotnettools.csharp",
				"redhat.vscode-yaml",
				"ms-azuretools.vscode-containers",
				"GitHub.vscode-pull-request-github",
				"bierner.markdown-mermaid"
			]
		}
	},

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [5243, 5223, 5045,  7298, 18848, 19888],
    "portsAttributes": {
		"5045": {
			"label": "Web App HTTP",
			"onAutoForward": "openBrowserOnce"
		},
		"7298": {
			"label": "Web App HTTPS",
			"onAutoForward": "openBrowserOnce"
		},
		"18848": {
			"label": "Dashboard HTTP",
			"onAutoForward": "silent"
		},
		"19888": {
			"label": "Dashboard HTTPS",
			"onAutoForward": "silent"
		}
	},

	// Don't prompt to open other services than the ones listed above.
	"otherPortsAttributes": {
		"onAutoForward": "silent"
	},

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "dotnet workload restore",
	"postStartCommand": {
		"dotnet-workload-restore": ["dotnet", "workload", "restore"],
		"dotnet-dev-certs-trust": ["dotnet", "dev-certs", "https", "--trust"],
		"copy-root-config": ["sh", "-c", "if [ -e /root/.vscode-remote ]; then cp -r /root/.vscode-remote /home/vscode/; fi"]
    },

	// Configure tool-specific properties.
	// "customizations": {},

	"hostRequirements": {
		"cpus": 4,
		"memory": "8gb"
	},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "root"
}
